@using HospitalSystem.DAL.Entity
@model MedicalReport

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">View Medical Report</h2>
            <div class="card shadow-sm p-4">
                <form asp-action="ViewReport" method="post">
                    <!-- Report ID Field -->
                    <div class="form-group mb-3">
                        <label asp-for="ReportID" class="form-label">Report ID</label>
                        <input asp-for="ReportID" class="form-control" placeholder="Enter Report ID" />
                        <span asp-validation-for="ReportID" class="text-danger"></span>
                    </div>

                    <!-- Patient National ID Field -->
                    <div class="form-group mb-3">
                        <label asp-for="PatientNationalId" class="form-label">Patient National ID</label>
                        <input asp-for="PatientNationalId" class="form-control" placeholder="Enter Patient National ID" />
                        <span asp-validation-for="PatientNationalId" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="d-grid" style="margin: 10px 0;">
                        <button type="submit" class="btn btn-primary btn-block">View Report</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


}
