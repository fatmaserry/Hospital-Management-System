@model EditReportVM
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Edit" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="ReportID" class="control-label">Report ID</label>
        <input asp-for="ReportID" class="form-control" readonly /> <!-- Make the ReportID read-only -->
        <span asp-validation-for="ReportID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PatientNationalId" class="control-label">Patient National ID</label>
        <input asp-for="PatientNationalId" class="form-control" />
        <span asp-validation-for="PatientNationalId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ReportImage" class="control-label">Report Image</label>
        <input type="file" asp-for="ReportImage" class="form-control" />
        <span asp-validation-for="ReportImage" class="text-danger"></span>
    </div>

    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success">@ViewBag.SuccessMessage</div>
    }

    <button type="submit" class="btn btn-primary">Update Report</button> <!-- Update instead of Create -->
</form>
