@using HospitalSystem.DAL.Entity
@model Room

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center">Add a New Room</h2>

    <form asp-action="AddRoom" method="post" class="w-50 mx-auto">
        <div class="form-group">
            <label asp-for="RName" class="control-label">Room Name</label>
            <input asp-for="RName" class="form-control" />
            <span asp-validation-for="RName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Capacity" class="control-label">Capacity</label>
            <input asp-for="Capacity" class="form-control" type="number" />
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-block mb-4">Add Room</button>
    </form>

    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
    {
        <div class="alert alert-success mt-3">
            @ViewBag.SuccessMessage
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
