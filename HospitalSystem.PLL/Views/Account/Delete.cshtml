
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center">Deactivate Account</h2>
    <p class="text-center">Are you sure you want to deactivate your account? </p>

    <form asp-action="DeleteAccount" method="post">
        <div class="text-center">
            <button type="submit" class="btn btn-danger mt-2">Yes, Deactivate</button>
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary mt-2">Cancel</a>
        </div>
    </form>
</div>
