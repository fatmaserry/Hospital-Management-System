@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header text-center bg-primary text-white">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form asp-action="ResetPassword" method="post">
                        <input type="hidden" asp-for="Token" />
                        <input type="hidden" asp-for="Email" />

                        <!-- Password Input -->
                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label"><i class="bi bi-lock"></i> New Password</label>
                            <input asp-for="Password" class="form-control" placeholder="Enter new password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Confirm Password Input -->
                        <div class="form-group mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"><i class="bi bi-lock-fill"></i> Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-block">
                                <i class="bi bi-arrow-repeat"></i> Reset Password
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>




